<Window x:Class="YeelightBulbControl.PresetsMenu"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:YeelightBulbControl"
        mc:Ignorable="d"
        ResizeMode="NoResize"
        Title="PresetsMenu" Height="246" Width="191">
    <Grid>
        <ListBox x:Name="PresetsListBox" HorizontalAlignment="Center" Height="184" VerticalAlignment="Top" Width="192" d:ItemsSource="{d:SampleData ItemCount=5}" DisplayMemberPath="Name" MouseDoubleClick="PresetsListBox_MouseDoubleClick"/>
        <Button x:Name="DeletePresetButton"  Content="Delete" HorizontalAlignment="Center" Height="36" Margin="0,184,0,0" VerticalAlignment="Top" Width="192" Click="DeletePresetButton_Click"/>

    </Grid>
</Window>
